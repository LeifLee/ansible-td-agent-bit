@SET IP={{ ansible_eth0['ipv4']['address'] }}
[SERVICE]
    # Flush
    # =====
    # Set an interval of seconds before to flush records to a destination
    Flush        5

    # Daemon
    # ======
    # Instruct Fluent Bit to run in foreground or background mode.
    Daemon       Off

    Log_File     {{ TD_AGENT_BIT_DIR_PATH }}/{{ TD_AGENT_BIT_LOG_NAME }}
    # Log_Level
    # =========
    # Set the verbosity level of the service, values can be:
    #
    # - error
    # - warning
    # - info
    # - debug
    # - trace
    #
    # By default 'info' is set, that means it includes 'error' and 'warning'.
    Log_Level    info

    # Parsers_File
    # ============
    # Specify an optional 'Parsers' configuration file
    Parsers_File parsers.conf
    # Plugins_File plugins.conf

    # HTTP Server
    # ===========
    # Enable/Disable the built-in HTTP Server for metrics
    HTTP_Server  On
    HTTP_Listen  0.0.0.0
    HTTP_Port    2020

[INPUT]
    Name cpu
    Tag  local_cpu
    Interval_Sec 10


[INPUT]
    Name disk
    Tag  local_disk
    Interval_Sec 10
    Interval_NSec 0

[INPUT]
    Name health
    Tag  local_health
    Host 10.111.64.56
    Port 2020
    Interval_Sec 10
    Internal_Nsec 0
    Alert enabled
    Add_Port true

[INPUT]
    Name mem
    Tag  local_memory
    Interval_Sec 10
    Internal_Nsec 0

[INPUT]
    Name                          tail
    Tag                           {{ LEARN_MAIN_TAG }}
    Path                          {{ LEARN_LOG_PATH }}
    Path_Key                      path
    Exclude_Path                  *.gz,*.zip
    Refresh_Interval              10s
    Rotate_Wait                   5s
    Ignore_Older                  2d
    Skip_Long_Lines               On
    DB                            {{ LEARN_MAIN_DB_PATH }}
    DB.Sync                       Full
    Buffer_Chunk_Size             1m
    Buffer_Max_Size               30m
    Mem_Buf_Limit                 64m
    Key                           message
    Multiline                     On
    Multiline_Flush               2
    Parser_Firstline              java_multiline

[INPUT]
    Name                          tail
    Tag                           {{ LEARN_RECORD_TAG }}
    Path                          {{ LEARN_RECORD_LOG_PATH }}
    Path_Key                      path
    Exclude_Path                  *.gz,*.zip
    Refresh_Interval              10s
    Rotate_Wait                   5s
    Ignore_Older                  2d
    Skip_Long_Lines               On
    DB                            {{ LEARN_RECORD_DB_PATH }}
    DB.Sync                       Full
    Buffer_Chunk_Size             1m
    Buffer_Max_Size               30m
    Mem_Buf_Limit                 64m
    Key                           message
    Parser                        json

[FILTER]
    Name   record_modifier
    Match  {{ LEARN_RECORD_TAG }}
    Record hostname ${HOSTNAME}
    Record topic {{ LEARN_RECORD_TOPIC }}
    Record ip_lan ${IP}

[FILTER]
    Name   record_modifier
    Match  {{ LEARN_MAIN_TAG }}
    Record hostname ${HOSTNAME}
    Record topic {{ LEARN_MAIN_TOPIC }}
    Record ip_lan ${IP}


[FILTER]
    Name   record_modifier
    Match  local_*
    Record hostname ${HOSTNAME}

[OUTPUT]
    Name                          kafka
    Match                         {{ KAFKA_TAG }}
    Format                        json
    Message_Key                   message
    Timestamp_Key                 timestamp
    Brokers                       kafka-1.hfjy.com:9092,kafka-2.hfjy.com:9092,kafka-3.hfjy.com:9092,kafka-4.hfjy.com:9092,kafka-5.hfjy.com:9092
    Topics                        {{ LEARN_RECORD_TOPIC }},{{ LEARN_MAIN_TOPIC }}
    Topic_Key                     topic
    rdkafka.message.max.bytes     10000000
    rdkafka.partitioner           random
    rdkafka.compression.codec     gzip

[OUTPUT]
    Name    influxdb
    Match   local_*
    Host    10.111.115.175
    Port    8086
    Database fluentbit
    Sequence_Tag _seq
